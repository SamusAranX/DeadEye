<UserControl x:Class="DeadEye.Controls.ColorPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:sys="clr-namespace:System;assembly=System.Runtime"
             mc:Ignorable="d"
             d:DesignHeight="104" d:DesignWidth="104">
    <UserControl.Resources>
        <sys:Double x:Key="ImageScaleFactor">8</sys:Double>

        <ScaleTransform x:Key="ImageTransform" 
                        ScaleX="{StaticResource ImageScaleFactor}" 
                        ScaleY="{StaticResource ImageScaleFactor}" />

        <Style TargetType="Border">
            <Setter Property="CornerRadius" Value="180" />
        </Style>

        <DrawingBrush x:Key="GridBrush" Viewport="0,0,40,40" AlignmentX="Center" AlignmentY="Center"
                      ViewportUnits="Absolute" Opacity="0.2"
                      TileMode="Tile">
            <DrawingBrush.Drawing>
                <DrawingGroup>
                    <DrawingGroup.GuidelineSet>
                        <GuidelineSet ></GuidelineSet>
                    </DrawingGroup.GuidelineSet>
                    <GeometryDrawing Geometry="M0,0 L1,0 1,0.1, 0,0.1Z" Brush="Black" />
                    <GeometryDrawing Geometry="M0,0 L0,1 0.1,1, 0.1,0Z" Brush="Black" />
                </DrawingGroup>
            </DrawingBrush.Drawing>
        </DrawingBrush>
    </UserControl.Resources>

    <Grid>
        <!-- masking border. margin must be the sum of the following borders' margins -->
        <Border Background="White" x:Name="ImageContainer" Margin="4" />

        <Border Background="{StaticResource TranslucentBlack}">
            <Border Background="White" Margin="1">
                <Border Background="Red" Margin="3" ClipToBounds="True">
                    <Border.OpacityMask>
                        <VisualBrush Visual="{Binding ElementName=ImageContainer}" />
                    </Border.OpacityMask>

                    <Grid>
                        <Border Background="Magenta" Margin="0" ClipToBounds="True"
                                    RenderOptions.BitmapScalingMode="NearestNeighbor" RenderOptions.EdgeMode="Aliased">
                            <Image Source="../Images/crop15px.png"/>
                        </Border>

                        <!--<Border Background="{StaticResource GridBrush}"></Border>-->

                        <Border BorderThickness="1" BorderBrush="{StaticResource TranslucentBlack}"></Border>
                    </Grid>
                </Border>
            </Border>
        </Border>
    </Grid>
</UserControl>